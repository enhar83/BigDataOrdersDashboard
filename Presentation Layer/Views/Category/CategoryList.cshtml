@model List<Category>

@{
	ViewData["Title"] = "CategoryList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
	<div class="container-fluid">
		<div class="row clearfix">
			<div class="col-lg-12">
				<div class="card">
					<div class="body">

						<table class="table table-bordered">
							<tr>
								<th>#</th>
								<th>Kategori Adı</th>
								<th>Sil</th>
								<th>Güncelle</th>
							</tr>

							@foreach (var item in Model)
							{
								<tr>
									<td>@item.CategoryId</td>
									<td>@item.CategoryName</td>
									<td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
									<td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-success">Güncelle</a></td>
								</tr>
							}

						</table>

						<a href="/Category/CreateCategory/" class="btn primary">Yeni Kategori Girişi</a>

					</div>
				</div>
			</div>
		</div>
	</div>
</section>

