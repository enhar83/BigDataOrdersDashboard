@model Product

@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">

	<div class="block-header">
		<div class="row">
			<div class="col-lg-7 col-md-6 col-sm-12">
				<h2>
					Ürün Güncelleme Sayfası
					<small class="text-muted"> Ürün İşlemleri</small>
				</h2>
			</div>
			<div class="col-lg-5 col-md-6 col-sm-12">
				<ul class="breadcrumb float-md-right">
					<li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Ürünler</a></li>
					<li class="breadcrumb-item"><a href="javascript:void(0);">Ürün Güncelleme</a></li>
					<li class="breadcrumb-item active">Ana Sayfa</li>
				</ul>
			</div>
		</div>
	</div>

	<div class="container-fluid">
		<div class="row clearfix">
			<div class="col-lg-12">
				<div class="card">
					<div class="body">

						<form method="post">
							<input type="hidden" asp-for="ProductId" />
							<label>Yeni Ürün Adı</label>
							<input type="text" asp-for="ProductName" class="form-control">
							<br />

							<label>Yeni Ürün Açıklaması</label>
							<input type="text" asp-for="ProductDescription" class="form-control">
							<br />

							<label>Yeni Ürün Fiyatı</label>
							<input type="text" asp-for="UnitPrice" class="form-control">
							<br />

							<label>Yeni Stok Miktarı</label>
							<input type="text" asp-for="StockQuantity" class="form-control">
							<br />

							<label>Yeni Kategori Adı</label>
							<select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryList">
								<option value="">-- Kategori Seçiniz --</option>
							</select>
							<br />

							<label>Yeni Üretim Yeri</label>
							<input type="text" asp-for="CountryOfOrigin" class="form-control">
							<br />

							<label>Yeni Ürün Fotoğrafı</label>
							<input type="text" asp-for="ProductImageUrl" class="form-control">
							<br />
							<button class="btn btn-info">Ürünü Güncelle</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</section>

