@model Product

@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
	<div class="container-fluid">
		<div class="row clearfix">
			<div class="col-lg-12">
				<div class="card">
					<div class="body">

						<form method="post">
							<label>Ürün Adı</label>
							<input type="text" asp-for="ProductName" class="form-control">
							<br />

							<label>Ürün Açıklaması</label>
							<input type="text" asp-for="ProductDescription" class="form-control">
							<br />

							<label>Ürün Fiyatı</label>
							<input type="text" asp-for="UnitPrice" class="form-control">
							<br />

							<label>Stok Miktarı</label>
							<input type="text" asp-for="StockQuantity" class="form-control">
							<br />

							<label>Üretim Yeri</label>
							<input type="text" asp-for="CountryOfOrigin" class="form-control">
							<br />

							<label>Ürün Fotoğrafı</label>
							<input type="text" asp-for="ProductImageUrl" class="form-control">
							<br />

							<label>Ürünün Kategorisi</label>
							<input type="text" asp-for="CategoryId" class="form-control">
							<br />

							<button class="btn btn-info">Ürünü Oluştur</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</section>

