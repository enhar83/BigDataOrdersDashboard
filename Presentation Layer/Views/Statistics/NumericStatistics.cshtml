@model NumericStatisticsCartsViewModel

@{
	ViewData["Title"] = "NumericStatistics";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
	<div class="block-header">
		<div class="row">
			<div class="col-lg-7 col-md-6 col-sm-12">
				<h2>
					İstatistik Sayfası
					<small class="text-muted">Sipariş ve Diğer İstatistikler</small>
				</h2>
			</div>
			<div class="col-lg-5 col-md-6 col-sm-12">
				<ul class="breadcrumb float-md-right">
					<li class="breadcrumb-item">
						<a href="#"><i class="zmdi zmdi-home"></i> Sayısal İstatistikler</a>
					</li>
					<li class="breadcrumb-item active">Ana Sayfa</li>
				</ul>
			</div>
		</div>
	</div>

	<div class="row clearfix">
		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="stat-card" style="background: linear-gradient(to right, #7F00FF, #E100FF);">
				<div class="stat-card-body">
					<div class="stat-icon"><i class="zmdi zmdi-star"></i></div>
					<div class="stat-title">Kategori Sayısı</div>
					<div class="stat-value">@Model.CategoryCount</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="stat-card" style="background: linear-gradient(to right, #36d1dc, #5b86e5);">
				<div class="stat-card-body">
					<div class="stat-icon"><i class="zmdi zmdi-star"></i></div>
					<div class="stat-title">Ürün Sayısı</div>
					<div class="stat-value">@Model.ProductCount</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="stat-card" style="background: linear-gradient(to right, #f7971e, #ffd200);">
				<div class="stat-card-body">
					<div class="stat-icon"><i class="zmdi zmdi-star"></i></div>
					<div class="stat-title">Müşteri Sayısı</div>
					<div class="stat-value">@Model.CustomerCount</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="stat-card" style="background: linear-gradient(to right, #00b09b, #96c93d);">
				<div class="stat-card-body">
					<div class="stat-icon"><i class="zmdi zmdi-star"></i></div>
					<div class="stat-title">Sipariş Sayısı</div>
					<div class="stat-value">@Model.OrderCount</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row clearfix">
		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="stat-card" style="background: linear-gradient(to right, #56ab2f, #a8e063);">
				<div class="stat-card-body">
					<div class="stat-icon"><i class="zmdi zmdi-star"></i></div>
					<div class="stat-title">Tamamlanan Siparişler</div>
					<div class="stat-value">@Model.CompletedOrderCount</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="stat-card" style="background: linear-gradient(to right, #f85032, #e73827);">
				<div class="stat-card-body">
					<div class="stat-icon"><i class="zmdi zmdi-star"></i></div>
					<div class="stat-title">İptal Edilen Siparişler</div>
					<div class="stat-value">@Model.CancelledOrderCount</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="stat-card" style="background: linear-gradient(to right, #ee0979, #ff6a00);">
				<div class="stat-card-body">
					<div class="stat-icon"><i class="zmdi zmdi-star"></i></div>
					<div class="stat-title">Ülke Sayısı</div>
					<div class="stat-value">@Model.DistinctCountryCount</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="stat-card" style="background: linear-gradient(to right, #614385, #516395);">
				<div class="stat-card-body">
					<div class="stat-icon"><i class="zmdi zmdi-star"></i></div>
					<div class="stat-title">Şehir Sayısı</div>
					<div class="stat-value">@Model.DistinctCityCount</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row clearfix">
		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="stat-card" style="background: linear-gradient(to right, #f857a6, #ff5858);">
				<div class="stat-card-body">
					<div class="stat-icon"><i class="zmdi zmdi-star"></i></div>
					<div class="stat-title">Toplam Stok</div>
					<div class="stat-value">@Model.TotalProductStock</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="stat-card" style="background: linear-gradient(to right, #cb2d3e, #ef473a);">
				<div class="stat-card-body">
					<div class="stat-icon"><i class="zmdi zmdi-star"></i></div>
					<div class="stat-title">Bu Yılki Siparişler</div>
					<div class="stat-value">@Model.ThisYearOrders</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="stat-card" style="background: linear-gradient(to right, #396afc, #2948ff);">
				<div class="stat-card-body">
					<div class="stat-icon"><i class="zmdi zmdi-star"></i></div>
					<div class="stat-title">Toplam Gelir</div>
					<div class="stat-value">@Model.TotalRevenue.ToString("N2")</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="stat-card" style="background: linear-gradient(to right, #ff416c, #ff4b2b);">
				<div class="stat-card-body">
					<div class="stat-icon"><i class="zmdi zmdi-star"></i></div>
					<div class="stat-title">Ortalama Gelir</div>
					<div class="stat-value">@Model.AverageTotalRevenue.ToString("N2")</div>
				</div>
			</div>
		</div>
	</div>

</section>

<style>
	.stat-card {
		height: 170px;
		border-radius: 12px;
		color: #fff;
		box-shadow: 0 6px 14px rgba(0,0,0,0.15);
	}

	.stat-card-body {
		height: 100%;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		text-align: center;
		padding: 15px;
	}

	.stat-icon {
		font-size: 28px;
		margin-bottom: 8px;
		opacity: 0.9;
	}

	.stat-title {
		font-size: 13px;
		opacity: 0.85;
		margin-bottom: 6px;
	}

	.stat-value {
		font-size: 16px;
		font-weight: 600;
		line-height: 1.3;
		max-width: 100%;
		word-break: break-word;
	}

</style>
