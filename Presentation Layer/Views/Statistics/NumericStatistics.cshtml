@model NumericStatisticsCartsViewModel

@{
	ViewData["Title"] = "NumericStatistics";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
	<div class="block-header">
		<div class="row">
			<div class="col-lg-7 col-md-6 col-sm-12">
				<h2>
					İstatistik Sayfası
					<small class="text-muted">Sipariş ve Diğer İstatistikler</small>
				</h2>
			</div>
			<div class="col-lg-5 col-md-6 col-sm-12">
				<ul class="breadcrumb float-md-right">
					<li class="breadcrumb-item">
						<a href="#"><i class="zmdi zmdi-home"></i> Sayısal İstatistikler</a>
					</li>
					<li class="breadcrumb-item active">Ana Sayfa</li>
				</ul>
			</div>
		</div>
	</div>

	<div class="row clearfix">

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="card info-box-2 stat-card"
				 style="background: linear-gradient(to right, #11998e, #38ef7d);">
				<div class="body">
					<div class="icon"><i class="zmdi zmdi-view-list"></i></div>
					<div class="content">
						<div class="text">KATEGORİ SAYISI</div>
						<div class="number">@Model.CategoryCount</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="card info-box-2 stat-card"
				 style="background: linear-gradient(to right, #f7971e, #ffd200);">
				<div class="body">
					<div class="icon"><i class="zmdi zmdi-shopping-basket"></i></div>
					<div class="content">
						<div class="text">ÜRÜN SAYISI</div>
						<div class="number">@Model.ProductCount</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="card info-box-2 stat-card"
				 style="background: linear-gradient(to right, #396afc, #2948ff);">
				<div class="body">
					<div class="icon"><i class="zmdi zmdi-accounts"></i></div>
					<div class="content">
						<div class="text">MÜŞTERİ SAYISI</div>
						<div class="number">@Model.CustomerCount</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="card info-box-2 stat-card"
				 style="background: linear-gradient(to right, #ff512f, #dd2476);">
				<div class="body">
					<div class="icon"><i class="zmdi zmdi-shopping-cart"></i></div>
					<div class="content">
						<div class="text">SİPARİŞ SAYISI</div>
						<div class="number">@Model.OrderCount</div>
					</div>
				</div>
			</div>
		</div>

	</div>

	<div class="row clearfix">

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="card info-box-2 stat-card"
				 style="background: linear-gradient(to right, #56ab2f, #a8e063);">
				<div class="body">
					<div class="icon"><i class="zmdi zmdi-check-circle"></i></div>
					<div class="content">
						<div class="text">TAMAMLANAN SİPARİŞLER</div>
						<div class="number">@Model.CompletedOrderCount</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="card info-box-2 stat-card"
				 style="background: linear-gradient(to right, #cb2d3e, #ef473a);">
				<div class="body">
					<div class="icon"><i class="zmdi zmdi-close-circle"></i></div>
					<div class="content">
						<div class="text">İPTAL EDİLEN SİPARİŞLER</div>
						<div class="number">@Model.CancelledOrderCount</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="card info-box-2 stat-card"
				 style="background: linear-gradient(to right, #7f7fd5, #86a8e7, #91eae4);">
				<div class="body">
					<div class="icon"><i class="zmdi zmdi-globe"></i></div>
					<div class="content">
						<div class="text">ÜLKE SAYISI</div>
						<div class="number">@Model.DistinctCountryCount</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="card info-box-2 stat-card"
				 style="background: linear-gradient(to right, #f7971e, #f9d423);">
				<div class="body">
					<div class="icon"><i class="zmdi zmdi-city"></i></div>
					<div class="content">
						<div class="text">ŞEHİR SAYISI</div>
						<div class="number">@Model.DistinctCityCount</div>
					</div>
				</div>
			</div>
		</div>

	</div>

	<div class="row clearfix">

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="card info-box-2 stat-card"
				 style="background: linear-gradient(to right, #00b09b, #96c93d);">
				<div class="body">
					<div class="icon"><i class="zmdi zmdi-archive"></i></div>
					<div class="content">
						<div class="text">TOPLAM STOK</div>
						<div class="number">@Model.TotalProductStock</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="card info-box-2 stat-card"
				 style="background: linear-gradient(to right, #fc5c7d, #6a82fb);">
				<div class="body">
					<div class="icon"><i class="zmdi zmdi-calendar"></i></div>
					<div class="content">
						<div class="text">BU YILKİ SİPARİŞLER</div>
						<div class="number">@Model.ThisYearOrders</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="card info-box-2 stat-card"
				 style="background: linear-gradient(to right, #11998e, #38ef7d);">
				<div class="body">
					<div class="icon"><i class="zmdi zmdi-money"></i></div>
					<div class="content">
						<div class="text">TOPLAM GELİR</div>
						<div class="number">@Model.TotalRevenue</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6 col-sm-12 mb-4">
			<div class="card info-box-2 stat-card"
				 style="background: linear-gradient(to right, #396afc, #2948ff);">
				<div class="body">
					<div class="icon"><i class="zmdi zmdi-trending-up"></i></div>
					<div class="content">
						<div class="text">ORT. GELİR</div>
						<div class="number">@Model.AverageTotalRevenue</div>
					</div>
				</div>
			</div>
		</div>

	</div>

</section>

<style>
	/* Ortak istatistik kart ayarları */
	.stat-card .body {
		padding: 12px 0 10px 0 !important;
	}

	.stat-card .icon {
		display: flex;
		align-items: center;
		justify-content: center;
		height: 48px;
	}

		.stat-card .icon i {
			font-size: 36px;
			color: #fff;
		}

	.stat-card .content {
		margin-top: 4px;
		text-align: center;
	}

	.stat-card .text {
		font-size: 13px;
		font-weight: 600;
		letter-spacing: .4px;
		opacity: .9;
	}

	.stat-card .number {
		font-size: 26px;
		font-weight: 700;
		line-height: 1.2;
	}

</style>
