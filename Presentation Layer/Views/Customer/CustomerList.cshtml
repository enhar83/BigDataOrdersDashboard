@model List<Customer>

@{
	ViewData["Title"] = "CustomerList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	int count = 0;
}

<section class="content">

	<div class="block-header">
		<div class="row">
			<div class="col-lg-7 col-md-6 col-sm-12">
				<h2>
					Müşteri Listesi
					<small class="text-muted">Müşteri İşlemleri Sayfası</small>
				</h2>
			</div>
			<div class="col-lg-5 col-md-6 col-sm-12">
				<ul class="breadcrumb float-md-right">
					<li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Müşteriler</a></li>
					<li class="breadcrumb-item"><a href="javascript:void(0);">Müşteri Listesi</a></li>
					<li class="breadcrumb-item active">Ana Sayfa</li>
				</ul>
			</div>
		</div>
	</div>

	<div class="container-fluid">
		<div class="row clearfix">
			<div class="col-lg-12">
				<div class="card">
					<div class="body">

						<table class="table table-bordered">
							<tr>
								<th>#</th>
								<th>Müşteri Adı</th>
								<th>Müşteri Soyadı</th>
								<th>Mail Adresi</th>
								<th>Telefon Numarası</th>
								<th>Ülkesi</th>
								<th>Şehiri</th>
								<th>İlçesi</th>
								<th>Adresi</th>
								<th>Sil</th>
								<th>Güncelle</th>
							</tr>

							@foreach (var item in Model)
							{
								count++;
								<tr>
									<td>@count</td>
									<td>@item.CustomerName</td>
									<td>@item.CustomerSurname</td>
									<td>@item.CustomerEmail</td>
									<td>@item.CustomerPhone</td>
									<td>@item.CustomerCountry</td>
									<td>@item.CustomerCity</td>
									<td>@item.CustomerDistrict</td>
									<td>@item.CustomerAddress</td>
									<td>
										<form id="deleteForm_@item.CustomerId" asp-action="DeleteCustomer" method="post" style="display:inline;">
											@Html.AntiForgeryToken()

											<input type="hidden" name="id" value="@item.CustomerId" />
											<button type="button" class="btn btn-danger btn-sm delete-btn" data-id="@item.CustomerId" data-customer-name="@item.CustomerId">Sil</button>
										</form>
									</td>
									<td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-success">Güncelle</a></td>
								</tr>
							}

						</table>

						<a href="/Customer/AddCustomer/" class="btn btn-info">Yeni Müşteri Girişi</a>

					</div>
				</div>
			</div>
		</div>
	</div>
</section>

